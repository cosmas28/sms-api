{
  "name": "sms-api",
  "version": "1.0.0",
  "description": "sms management system",
  "main": "server.js",
  "scripts": {
    "test:unit": "nyc --reporter=lcov --reporter=html --reporter=text mocha --recursive test/* --require @babel/register --timeout 150000 --exit",
    "start:dev": "NODE_ENV=development nodemon --exec babel-node ./bin/www",
    "build": "babel-node ./app --out-dir dist",
    "clean": "rimraf dist",
    "server:prod": "node ./dist",
    "start": "NODE_ENV=production npm run build && npm run server:prod",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix ."
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongoose": "~3.6.13",
    "morgan": "^1.9.1",
    "pg": "^7.12.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.12.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmas28/sms-api.git"
  },
  "author": "Cosmas augubilla100@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cosmas28/sms-api/issues"
  },
  "homepage": "https://github.com/cosmas28/sms-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-istanbul": "^0.12.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "isparta": "^4.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": "10.15.1"
  }
}
